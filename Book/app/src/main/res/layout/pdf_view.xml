<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootBookDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".PdfViewActivity">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/pdfLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icBack"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:padding="@dimen/_8sdp"
            app:srcCompat="@drawable/ic_arrow_back"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/icSettings"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/icChapters"
            android:visibility="gone"
            android:padding="@dimen/_11sdp"
            app:srcCompat="@drawable/settings" />

        <ImageView
            android:id="@+id/icChapters"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/icLoved"
            android:visibility="gone"
            android:padding="@dimen/_11sdp"
            app:srcCompat="@drawable/menu" />

        <ImageView
            android:id="@+id/icLoved"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:padding="@dimen/_11sdp"
            app:srcCompat="@drawable/loved" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pdfLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:clickable="false"
        app:layout_constraintBottom_toTopOf="@+id/shadowR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLayout">

        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/pdfView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/pdfBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </com.github.barteksc.pdfviewer.PDFView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chaptersLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/shadowR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLayout">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chaptersRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shadowR"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_layout_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_85sdp"
        app:layout_constraintTop_toBottomOf="@+id/pdfLayout">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_navigation_view"
        android:padding="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvBookNamePdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:text="Название книги..."
                android:textColor="#323232"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_55sdp"
                android:layout_marginEnd="@dimen/_19sdp"
                android:text="Загрузка..."
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

        <TextView
            android:id="@+id/tvChapterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/currentPageBar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="16dp"
            android:layout_toStartOf="@+id/tvPages"
            android:allowUndo="false"
            android:text="Название главы..."
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />

            <SeekBar
                android:id="@+id/currentPageBar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_style"
                android:splitTrack="false"
                android:visibility="gone"
                android:thumb="@drawable/custom_thumb" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomLayoutSettings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_navigation_view"
        android:padding="@dimen/_5sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/btnSelectedColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/btnWhiteColor"
            android:layout_marginTop="@dimen/_40sdp"
            app:srcCompat="@drawable/btn_selected_color"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/btnWhiteColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_40sdp"
            app:srcCompat="@drawable/btn_white_color" />

        <ImageView
            android:id="@+id/btnDarkColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btnWhiteColor"
            android:layout_marginTop="@dimen/_40sdp"
            app:srcCompat="@drawable/btn_dark_color" />

        <TextView
            android:id="@+id/textView95"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Цвет фона"
            android:textColor="#323232"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>