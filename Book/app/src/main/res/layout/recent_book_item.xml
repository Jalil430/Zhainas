<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_3sdp"
    android:backgroundTint="@color/background"
    app:cardElevation="0dp"
    app:contentPadding="@dimen/_3sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/bookCardR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:layout_marginVertical="@dimen/_2sdp"
        android:backgroundTint="@color/background"

        app:cardCornerRadius="11dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_153sdp"
            android:layout_gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewR"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_153sdp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/roundImageView"
                app:srcCompat="@drawable/ic_launcher_foreground" />

            <ProgressBar
                android:id="@+id/imageBarR"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageViewR"
                android:layout_alignEnd="@+id/imageViewR"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/_30sdp" />

            <TextView
                android:id="@+id/tvRecent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_21sdp"
                android:layout_toEndOf="@id/imageViewR"
                android:textSize="@dimen/_9ssp"
                android:textStyle="bold"
                android:text="Вы недавно читали:" />

            <TextView
                android:id="@+id/tvBookNameR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_toEndOf="@id/imageViewR"
                android:text="Название книги"
                android:textColor="@color/black_white"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvWriterR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvProgressR"
                android:layout_below="@+id/tvBookNameR"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toEndOf="@id/imageViewR"
                android:text="Написал"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/tvProgressR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_toEndOf="@id/imageViewR"
                android:text="0%"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBookR"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvProgressR"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_toEndOf="@+id/imageViewR"
                android:progress="50"
                android:progressTint="@color/foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_toStartOf="@id/icArrowGoR"
                android:text="Продолжить"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/foreground"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/icArrowGoR"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/ic_arrow_go" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>